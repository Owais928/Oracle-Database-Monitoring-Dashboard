                                <th>SID</th>
                                <th>Username</th>
                                <th>Program</th>
                                <th>Event</th>
                                <th>Last Call</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center py-3">
                                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <span class="text-muted ms-2">Loading session data...</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Alerts -->
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Recent Alerts
                </h5>
            </div>
            <div class="card-body">
                <div id="alert-log" style="max-height: 200px; overflow-y: auto;">
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="text-muted ms-2">Loading alerts...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    function updateLastUpdateTime() {
        const now = new Date();
        document.getElementById('last-update').textContent = now.toLocaleTimeString();
    }
    
    updateLastUpdateTime();
    setInterval(updateLastUpdateTime, 1000);
    
    document.getElementById('refreshInterval').addEventListener('change', function() {
        const interval = parseInt(this.value);
        if (socket) {
            socket.emit('setRefreshInterval', interval);
        }
    });
    
    window.requestImmediateUpdate = function() {
        if (socket) {
            socket.emit('requestUpdate');
            showAlert('Refreshing data...', 'info');
        }
    };
    
    window.showAlert = function(message, type = 'info', duration = 5000) {
        const container = document.getElementById('alerts-container');
        const alertId = 'alert-' + Date.now();
        
        const alertHTML = `
            <div id="${alertId}" class="alert alert-${type} alert-dismissible fade show" role="alert">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        
        container.insertAdjacentHTML('afterbegin', alertHTML);
        
        if (duration > 0) {
            setTimeout(() => {
                const alert = document.getElementById(alertId);
                if (alert) {
                    alert.remove();
                }
            }, duration);
        }
    };
});
</script>
