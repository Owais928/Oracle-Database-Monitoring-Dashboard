                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addDatafileForm">
                    <div class="mb-3">
                        <label for="addDatafileTablespace" class="form-label">Tablespace</label>
                        <input type="text" class="form-control" id="addDatafileTablespace" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="datafileName" class="form-label">File Name</label>
                        <input type="text" class="form-control" id="datafileName" required>
                    </div>
                    <div class="mb-3">
                        <label for="datafileSize" class="form-label">Size</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="datafileSize" min="1" step="1" required>
                            <select class="form-select" id="datafileUnit">
                                <option value="MB">MB</option>
                                <option value="GB">GB</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="datafileAutoextend">
                        <label class="form-check-label" for="datafileAutoextend">
                            Enable Autoextend
                        </label>
                    </div>
                    <div id="datafileAutoextendOptions" style="display: none;">
                        <div class="mb-3">
                            <label for="datafileNextSize" class="form-label">Next Size</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="datafileNextSize" min="1" step="1">
                                <span class="input-group-text">MB</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="datafileMaxSize" class="form-label">Max Size</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="datafileMaxSize" min="1" step="1">
                                <select class="form-select" id="datafileMaxSizeUnit">
                                    <option value="MB">MB</option>
                                    <option value="GB">GB</option>
                                    <option value="UNLIMITED">UNLIMITED</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="executeAddDatafile()">Add Datafile</button>
            </div>
        </div>
    </div>
</div>

<script>
// Show/hide autoextend options
document.getElementById('resizeAutoextend').addEventListener('change', function() {
    document.getElementById('autoextendOptions').style.display = this.checked ? 'block' : 'none';
});

document.getElementById('datafileAutoextend').addEventListener('change', function() {
    document.getElementById('datafileAutoextendOptions').style.display = this.checked ? 'block' : 'none';
});

function executeResize() {
    const tablespace = document.getElementById('resizeTablespaceName').value;
    const size = document.getElementById('resizeSize').value;
    const unit = document.getElementById('resizeUnit').value;
    const autoextend = document.getElementById('resizeAutoextend').checked;
    
    let sql = `ALTER TABLESPACE ${tablespace} `;
    
    if (autoextend) {
        const nextSize = document.getElementById('nextSize').value;
        const maxSize = document.getElementById('maxSize').value;
        const maxSizeUnit = document.getElementById('maxSizeUnit').value;
        
        sql += `ADD DATAFILE SIZE ${size}${unit} AUTOEXTEND ON NEXT ${nextSize}M `;
        if (maxSizeUnit === 'UNLIMITED') {
            sql += `MAXSIZE UNLIMITED`;
        } else {
            sql += `MAXSIZE ${maxSize}${maxSizeUnit}`;
        }
    } else {
        sql += `RESIZE ${size}${unit}`;
    }
    
    executeStorageOperation(sql, 'Tablespace resized successfully');
}

function executeAddDatafile() {
    const tablespace = document.getElementById('addDatafileTablespace').value;
    const filename = document.getElementById('datafileName').value;
    const size = document.getElementById('datafileSize').value;
    const unit = document.getElementById('datafileUnit').value;
    const autoextend = document.getElementById('datafileAutoextend').checked;
    
    let sql = `ALTER TABLESPACE ${tablespace} ADD DATAFILE '${filename}' SIZE ${size}${unit}`;
    
    if (autoextend) {
        const nextSize = document.getElementById('datafileNextSize').value;
        const maxSize = document.getElementById('datafileMaxSize').value;
        const maxSizeUnit = document.getElementById('datafileMaxSizeUnit').value;
        sql += ` AUTOEXTEND ON NEXT ${nextSize}M `;
        if (maxSizeUnit === 'UNLIMITED') {
            sql += `MAXSIZE UNLIMITED;`;
        } else {
            sql += ` AUTOEXTEND ON NEXT ${nextSize}M `;
            sql += `MAXSIZE ${maxSize}${maxSizeUnit};`;
        }
    }
    
    executeStorageOperation(sql, 'Datafile added successfully');
}

function executeStorageOperation(sql, successMessage) {
    fetch('/api/dba/execute-sql', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ sql: sql })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert(successMessage);
            refreshStorage();
            bootstrap.Modal.getInstance(document.getElementById('resizeTablespaceModal')).hide();
            bootstrap.Modal.getInstance(document.getElementById('addDatafileModal')).hide();
        } else {
            alert(`Error: ${data.message}`);
        }
    })
    .catch(error => {
        alert('Network error: ' + error.message);
    });
}
</script>