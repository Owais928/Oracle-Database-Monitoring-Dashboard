<!-- Storage Management Script -->
<script src="/js/charts.js"></script>
<script>
let storageCharts = {};
let storageData = {
    timestamps: [],
    totalSpace: [],
    usedSpace: [],
    freeSpace: []
};

function initStorageCharts() {
    // Tablespace Chart
    const tablespaceCtx = document.getElementById('tablespaceChart').getContext('2d');
    storageCharts.tablespace = new Chart(tablespaceCtx, {
        type: 'bar',
        data: {
            labels: [],
            datasets: [{
                label: 'Used Space (%)',
                data: [],
                backgroundColor: function(context) {
                    const value = context.raw;
                    return value > 90 ? 'rgb(255, 99, 132)' :
                           value > 80 ? 'rgb(255, 159, 64)' :
                           'rgb(75, 192, 192)';
                },
                borderColor: function(context) {
                    const value = context.raw;
                    return value > 90 ? 'rgb(255, 99, 132)' :
                           value > 80 ? 'rgb(255, 159, 64)' :
                           'rgb(75, 192, 192)';
                },
                borderWidth: 1,
                borderRadius: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            indexAxis: 'y',
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return `Used: ${context.raw}%`;
                        }
                    }
                }
            },
            scales: {
                x: {
                    beginAtZero: true,
                    max: 100,
                    title: {
                        display: true,
                        text: 'Used Percentage (%)'
                    }
                },
                y: {
                    ticks: {
                        font: {
                            size: 11
                        }
                    }
                }
            }
        }
    });

    // Storage Trend Chart
    const trendCtx = document.getElementById('storageTrendChart').getContext('2d');
    storageCharts.trend = new Chart(trendCtx, {
        type: 'line',
        data: {
            labels: storageData.timestamps,
            datasets: [
                {
                    label: 'Total Space (GB)',
                    data: storageData.totalSpace,
                    borderColor: 'rgb(54, 162, 235)',
                    backgroundColor: 'rgba(54, 162, 235, 0.1)',
                    tension: 0.4,
                    fill: true
                },
                {
                    label: 'Used Space (GB)',
                    data: storageData.usedSpace,
                    borderColor: 'rgb(255, 99, 132)',
                    backgroundColor: 'rgba(255, 99, 132, 0.1)',
                    tension: 0.4,
                    fill: true
                },
                {
                    label: 'Free Space (GB)',
                    data: storageData.freeSpace,
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.1)',
                    tension: 0.4,
                    fill: true
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top'
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Space (GB)'
                    }
                }
            }
        }
    });
}

function refreshStorage() {
    fetch('/api/dashboard/metrics/tablespaces')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                updateStorageMetrics(data.data);
            }
        })
        .catch(error => {
            console.error('Error refreshing storage:', error);
        });
}

function updateStorageMetrics(tablespaces) {
    const timestamp = new Date().toLocaleTimeString();
    
    // Calculate totals
    let totalMB = 0;
    let usedMB = 0;
    let freeMB = 0;
    let criticalCount = 0;
    
    tablespaces.forEach(ts => {
        totalMB += ts.TOTAL_MB || 0;
        usedMB += ts.USED_MB || 0;
        freeMB += ts.FREE_MB || 0;
        if (ts.USED_PCT > 90) criticalCount++;
    });
    
    // Update overview cards
    document.getElementById('total-space').textContent = (totalMB / 1024).toFixed(2) + ' GB';
    document.getElementById('used-space').textContent = (usedMB / 1024).toFixed(2) + ' GB';
    document.getElementById('free-space').textContent = (freeMB / 1024).toFixed(2) + ' GB';
    document.getElementById('critical-tablespaces').textContent = criticalCount;
    
    // Update tablespace chart
    updateTablespaceChart(tablespaces);
    
    // Update critical tablespaces list
    updateCriticalTablespaces(tablespaces);
    
    // Update tablespace details table
    updateTablespaceDetailsTable(tablespaces);
    
    // Update data files table
    updateDataFilesTable(tablespaces);
    
    // Update temp space table
    updateTempSpaceTable(tablespaces);
    
    // Update trend chart
    updateTrendChart(totalMB, usedMB, freeMB, timestamp);
}

function updateTablespaceChart(tablespaces) {
    const showCriticalOnly = document.getElementById('showCriticalOnly').checked;
    
    let filteredTablespaces = tablespaces;
    if (showCriticalOnly) {
        filteredTablespaces = tablespaces.filter(ts => ts.USED_PCT > 90);
    }
    
    // Sort by usage percentage
    filteredTablespaces.sort((a, b) => b.USED_PCT - a.USED_PCT);
    
    // Take top 15 for display
    const displayTablespaces = filteredTablespaces.slice(0, 15);
    
    if (storageCharts.tablespace) {
        storageCharts.tablespace.data.labels = displayTablespaces.map(ts => ts.TABLESPACE_NAME);
        storageCharts.tablespace.data.datasets[0].data = displayTablespaces.map(ts => ts.USED_PCT);
        storageCharts.tablespace.update();
    }
}

function updateCriticalTablespaces(tablespaces) {
    const container = document.getElementById('criticalTablespacesList');
    if (!container) return;
    
    const criticalTablespaces = tablespaces.filter(ts => ts.USED_PCT > 90);
    
    let html = '';
    if (criticalTablespaces.length === 0) {
        html = '<div class="alert alert-success">No critical tablespaces</div>';
    } else {
        criticalTablespaces.forEach(ts => {
            html += `
                <div class="alert alert-danger mb-2 p-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <strong>${ts.TABLESPACE_NAME}</strong>
                            <div class="small">${ts.USED_PCT.toFixed(1)}% used</div>
                        </div>
                        <button class="btn btn-sm btn-outline-light" 
                                onclick="showTablespaceDetails('${ts.TABLESPACE_NAME}')">
                            <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                    <div class="progress mt-1" style="height: 5px;">
                        <div class="progress-bar bg-danger" style="width: ${ts.USED_PCT}%"></div>
                    </div>
                </div>
            `;
        });
    }
    
    container.innerHTML = html;
}

function updateTablespaceDetailsTable(tablespaces) {
    const tbody = document.querySelector('#tablespaceDetailsTable tbody');
    if (!tbody) return;
    
    let html = '';
    tablespaces.forEach(ts => {
        const statusClass = ts.USED_PCT > 90 ? 'danger' :
                           ts.USED_PCT > 80 ? 'warning' : 'success';
        
        html += `
            <tr>
                <td>
                    <strong>${ts.TABLESPACE_NAME}</strong>
                </td>
                <td>
                    <span class="badge bg-${ts.CONTENTS === 'TEMPORARY' ? 'warning' : 'primary'}">
                        ${ts.CONTENTS}
                    </span>
                </td>
                <td>${(ts.TOTAL_MB / 1024).toFixed(2)}</td>
                <td>${(ts.USED_MB / 1024).toFixed(2)}</td>
                <td>${(ts.FREE_MB / 1024).toFixed(2)}</td>
                <td>
                    <div class="d-flex align-items-center">
                        <div class="progress flex-grow-1" style="height: 20px;">
                            <div class="progress-bar bg-${statusClass}" 
                                 style="width: ${ts.USED_PCT}%">
                                ${ts.USED_PCT.toFixed(1)}%
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <span class="badge bg-${ts.AUTOEXTENSIBLE === 'YES' ? 'success' : 'secondary'}">
                        ${ts.AUTOEXTENSIBLE}
                    </span>
                </td>
                <td>
                    <span class="badge bg-${ts.STATUS === 'ONLINE' ? 'success' : 'danger'}">
                        ${ts.STATUS}
                    </span>
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-info" 
                                onclick="showTablespaceDetails('${ts.TABLESPACE_NAME}')">
                            <i class="bi bi-info-circle"></i>
                        </button>
                        <button class="btn btn-outline-primary" 
                                onclick="resizeTablespace('${ts.TABLESPACE_NAME}')">
                            <i class="bi bi-arrows-expand"></i>
                        </button>
                        <button class="btn btn-outline-success" 
                                onclick="addDatafile('${ts.TABLESPACE_NAME}')">
                            <i class="bi bi-plus"></i>
                        </button>
                    </div>
                </td>
            </tr>
        `;
    });
    
    tbody.innerHTML = html;
    
    // Add search functionality
    document.getElementById('tablespaceSearch').addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = tbody.querySelectorAll('tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });
}

function showTablespaceDetails(tablespaceName) {
    fetch(`/api/dashboard/tablespace/${encodeURIComponent(tablespaceName)}/details`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const modal = new bootstrap.Modal(document.getElementById('tablespaceDetailsModal'));
                document.getElementById('tablespaceDetailsContent').innerHTML = `
                    <h5>${data.data.TABLESPACE_NAME}</h5>
                    <table class="table table-sm">
                        ${Object.entries(data.data).map(([key, value]) => `
                            <tr>
                                <th>${key.replace(/_/g, ' ')}:</th>
                                <td>${value}</td>
                            </tr>
                        `).join('')}
                    </table>
                    <div class="mt-3">
                        <button class="btn btn-primary" onclick="resizeTablespace('${data.data.TABLESPACE_NAME}')">
                            Resize Tablespace
                        </button>
                        <button class="btn btn-success ms-2" onclick="addDatafile('${data.data.TABLESPACE_NAME}')">
                            Add Datafile
                        </button>
                    </div>
                `;
                modal.show();
            }
        });
}

function resizeTablespace(tablespaceName) {
    const modal = new bootstrap.Modal(document.getElementById('resizeTablespaceModal'));
    document.getElementById('resizeTablespaceName').value = tablespaceName;
    modal.show();
}

function addDatafile(tablespaceName) {
    const modal = new bootstrap.Modal(document.getElementById('addDatafileModal'));
    document.getElementById('addDatafileTablespace').value = tablespaceName;
    modal.show();
}

function updateDataFilesTable(tablespaces) {
    // This would normally fetch data files from a separate endpoint
    const tbody = document.querySelector('#datafilesTable tbody');
    if (!tbody) return;
    
    let html = '';
    tablespaces.forEach(ts => {
        // Simulate data files for each tablespace
        html += `
            <tr>
                <td>
                    <small>+DATA/${ts.TABLESPACE_NAME}/datafile01.dbf</small>
                </td>
                <td>${ts.TABLESPACE_NAME}</td>
                <td>${(ts.TOTAL_MB / 3).toFixed(0)}</td>
                <td>${(ts.USED_MB / 3).toFixed(0)}</td>
                <td>
                    <span class="badge bg-${ts.AUTOEXTENSIBLE === 'YES' ? 'success' : 'secondary'}">
                        ${ts.AUTOEXTENSIBLE}
                    </span>
                </td>
                <td>
                    <span class="badge bg-${ts.STATUS === 'ONLINE' ? 'success' : 'danger'}">
                        ${ts.STATUS}
                    </span>
                </td>
            </tr>
        `;
    });
    
    tbody.innerHTML = html;
}

function updateTempSpaceTable(tablespaces) {
    const tempTablespaces = tablespaces.filter(ts => ts.CONTENTS === 'TEMPORARY');
    const tbody = document.querySelector('#tempSpaceTable tbody');
    if (!tbody) return;
    
    let html = '';
    tempTablespaces.forEach(ts => {
        const statusClass = ts.USED_PCT > 90 ? 'danger' :
                           ts.USED_PCT > 80 ? 'warning' : 'success';
        
        html += `
            <tr>
                <td>${ts.TABLESPACE_NAME}</td>
                <td>${ts.TOTAL_MB.toFixed(0)}</td>
                <td>${ts.USED_MB.toFixed(0)}</td>
                <td>${ts.FREE_MB.toFixed(0)}</td>
                <td>
                    <div class="d-flex align-items-center">
                        <div class="progress flex-grow-1" style="height: 10px;">
                            <div class="progress-bar bg-${statusClass}" 
                                 style="width: ${ts.USED_PCT}%"></div>
                        </div>
                        <span class="ms-2">${ts.USED_PCT.toFixed(1)}%</span>
                    </div>
                </td>
                <td>
                    <span class="badge bg-${statusClass}">
                        ${ts.USED_PCT > 90 ? 'CRITICAL' : 
                          ts.USED_PCT > 80 ? 'WARNING' : 'NORMAL'}
                    </span>
                </td>
            </tr>
        `;
    });
    
    tbody.innerHTML = html || '<tr><td colspan="6" class="text-center">No temporary tablespaces</td></tr>';
}

function updateTrendChart(totalMB, usedMB, freeMB, timestamp) {
    storageData.timestamps.push(timestamp);
    storageData.totalSpace.push(totalMB / 1024);
    storageData.usedSpace.push(usedMB / 1024);
    storageData.freeSpace.push(freeMB / 1024);
    
    // Keep only last 20 data points
    if (storageData.timestamps.length > 20) {
        storageData.timestamps.shift();
        storageData.totalSpace.shift();
        storageData.usedSpace.shift();
        storageData.freeSpace.shift();
    }
    
    if (storageCharts.trend) {
        storageCharts.trend.data.labels = storageData.timestamps;
        storageCharts.trend.data.datasets[0].data = storageData.totalSpace;
        storageCharts.trend.data.datasets[1].data = storageData.usedSpace;
        storageCharts.trend.data.datasets[2].data = storageData.freeSpace;
        storageCharts.trend.update();
    }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', () => {
    initStorageCharts();
    refreshStorage();
    
    // Auto-refresh every 60 seconds
    setInterval(refreshStorage, 60000);
    
    // Toggle critical only
    document.getElementById('showCriticalOnly').addEventListener('change', () => {
        refreshStorage();
    });
});
</script>

