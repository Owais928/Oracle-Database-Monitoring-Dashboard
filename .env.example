# Application Configuration
NODE_ENV=production
APP_NAME=Oracle Dashboard
APP_VERSION=1.0.0
PORT=3022
HOST=localhost
BASE_URL=http://localhost:3022

# Security Configuration
SESSION_SECRET=your_session_secret
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=32-character-encryption-key-here
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# Database Configuration
DB_HOST=localhost
DB_PORT=1521
DB_SERVICE=ORCL
DB_USER=Database_Username
DB_PASSWORD=Password_For_Database
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_INCREMENT=1
DB_POOL_TIMEOUT=60
DB_QUEUE_TIMEOUT=60000
#ORACLE_CLIENT_PATH=/opt/oracle/instantclient

# Authentication Configuration
AUTH_ENABLED=true
ADMIN_USER=admin
ADMIN_PASSWORD=admin123
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
REQUIRE_2FA=false

# Monitoring Configuration
REFRESH_INTERVAL=30000
METRICS_HISTORY_SIZE=1000
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=300000
ALERT_CHECK_INTERVAL=60000
ENABLE_ALERTING=true
CLEANUP_INTERVAL=86400000

# Alert Thresholds
TABLESPACE_CRITICAL=90
TABLESPACE_WARNING=80
SESSION_CRITICAL=500
SESSION_WARNING=300
CPU_CRITICAL=90
CPU_WARNING=70
MEMORY_CRITICAL=90
MEMORY_WARNING=70
IOWAIT_CRITICAL=50
IOWAIT_WARNING=30
LOCK_CRITICAL=20
LOCK_WARNING=10

# Email Configuration (for alerts)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=oracle-dashboard@yourdomain.com
ALERT_RECIPIENTS=admin@yourdomain.com,dba@yourdomain.com

# Webhook Configuration
WEBHOOKS_ENABLED=false
WEBHOOK_URL=https://your-webhook-url.com
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_EVENTS=CRITICAL,WARNING

# Logging Configuration
LOG_LEVEL=info
LOG_DIRECTORY=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_FORMAT=combined

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_DIRECTORY=./backups
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false
BACKUP_ENCRYPTION_KEY=

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=*
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_NOSNIFF=true
ENABLE_FRAME_GUARD=true

# UI Configuration
UI_THEME=dark
UI_DEFAULT_PAGE=dashboard
UI_CHARTS_ENABLED=true
UI_REALTIME_UPDATES=true
UI_EXPORT_ENABLED=true
UI_MAX_EXPORT_ROWS=10000